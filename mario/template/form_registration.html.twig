<div class="container b-registration__form">
    <div class="row">
        <div class="col-12">
            <h2 class="b-authorization__subtitle">Регистрация</h2>
        </div>
    </div>
    <div class="row align-middle">
        <div class="col-md-6 col-xs-12 offset-md-3">
            <form>
                <div class="form-group b-authorization__form-group">
                    <input type="email" class="form-control b-authorization__input" id="loginAuthorization" placeholder="Введите email">
                </div>
                <div class="form-group b-authorization__form-group">
                    <input type="text" class="form-control b-authorization__input" id="nameAuthorization" placeholder="Введите Имя">
                </div>
                <div class="form-group b-authorization__form-group">
                    <input type="password" class="form-control b-authorization__input" id="inputPasswordAuthorization" placeholder="Пароль">
                </div>
                <div class="form-group b-authorization__form-group">
                    <input type="repeatPassword" class="form-control b-authorization__input" id="repeatPassword" placeholder="Повторите пароль">
                </div>
                <button type="button" class="btn btn-primary b-authorization__button" data-toggle="modal" data-target="#registrationModal">Зарегистрироваться</button>
            </form>
        </div>
    </div>
</div>

{% block modal %}
    {% include("modal.html.twig")%}
{% endblock %}