<div class="container b-authorization__form">
    <div class="row">
        <div class="col-12">
            <h2 class="b-authorization__subtitle">
                {% if winningPlayer == 'Ничья' %}
                    <span id="winningPlayer">{{winningPlayer}}</span>
                {% endif %}
                {% if winningPlayer != 'Ничья' %}
                    Игрок <span id="winningPlayer">{{winningPlayer}}</span> победил!
                {% endif %}
            </h2>
        </div>
    </div>
    <div class="row align-middle">
        <div class="col-md-6 col-xs-12 offset-md-3">
            <form>
                <div class="form-group b-authorization__form-group b-players-names__form-group">
                    <span class="b-players-names__input b-players-names__input_mario"></span>
                    <div id="namePlayer1" class="b-end-of-game__name-player">
                        {{gamer1}}<span class="b-end-of-game__count" id="countPlayer1"></span>
                    </div>
                </div>
                <div class="form-group b-authorization__form-group b-players-names__form-group">
                    <span class="b-players-names__input b-players-names__input_luidzhi"></span>
                    <div id="namePlayer2" class="b-end-of-game__name-player">
                        {{gamer2}}<span class="b-end-of-game__count" id="countPlayer2"></span>
                    </div>
                </div>
                {% if user_id is empty %}
                    <a href="/registration.php">
                        <button type="button" class="btn btn-success b-authorization__button">
                            Регистрация
                        </button>
                    </a>
                {% endif %}
                {% if user_id is not empty %}
                    <a href="/action_choice.php">
                        <button type="button" class="btn btn-success b-authorization__button">
                            Далее
                        </button>
                    </a>
                {% endif %}
            </form>
        </div>
    </div>
</div>